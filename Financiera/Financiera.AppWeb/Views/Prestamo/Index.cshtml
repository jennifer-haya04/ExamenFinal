@model Financiera.Entity.Prestamo
@{
    ViewBag.Title = "Index";
}

<h2>Generar Prestamo</h2>
<hr />

@using (Html.BeginForm())
{

    @Html.HiddenFor(model => Model.Id)

    <div class="form-group">
        @Html.LabelFor(model => Model.Fecha, "Fecha del Prestamo")
        @Html.EditorFor(model => Model.Fecha)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.Cliente , "Cliente:")
        @Html.DropDownList("Cliente", new SelectList(ViewBag.lista, "Id", "Nombre"))
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.Monto, "Monto:")
        @Html.EditorFor(model => Model.Monto)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.Cuotas, "Cuotas:")
        @Html.EditorFor(model => Model.Cuotas)
    </div>
}

